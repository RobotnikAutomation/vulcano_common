<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="M_PI" value="3.1415926535897931" />
  <!-- Wheels -->
  <xacro:property name="wheel_radius" value="0.093" /> 
  <xacro:property name="wheel_height" value="0.14" />
  <xacro:property name="wheel_mass" value="5.0" /> <!-- in kg-->
  
  <xacro:property name="steer_joint_damping" value="2000.0" />
  <xacro:property name="steer_joint_friction" value="1000.0" />
  <xacro:property name="steer_joint_effort_limit" value="100.0" />
  <xacro:property name="steer_joint_velocity_limit" value="2" />
  <xacro:property name="steer_joint_position_limit" value="2.9" /> 
  <xacro:property name="steer_mechanical_reduction" value="1.0" />

  <xacro:property name="traction_joint_damping" value="1000.0" />
  <xacro:property name="traction_joint_friction" value="1000.0" />
  <xacro:property name="traction_joint_effort_limit" value="1000.0" />
  <xacro:property name="traction_joint_velocity_limit" value="6.28" />
  <xacro:property name="traction_mechanical_reduction" value="1.0" />
     
  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertia  ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0"
              iyy="${m*(3*r*r+h*h)/12}" iyz = "0"
              izz="${m*r*r/2}" /> 
  </xacro:macro>
 
  <xacro:macro name="motor_wheel" params="prefix parent *origin hq">

  <!--MOTOR WHEEL -->  
    <joint name="${prefix}wheel_steer_joint" type="revolute">
      <parent link="${parent}"/>
      <child link="${prefix}wheel_steer_link"/>
      <xacro:insert_block name="origin" />
      <axis xyz="0 0 1" rpy="0 0 0" />
      <limit effort="${steer_joint_effort_limit}" velocity="${steer_joint_velocity_limit}" lower="-${steer_joint_position_limit}" upper="${steer_joint_position_limit}"/>
      <dynamics damping="${steer_joint_damping}" friction="${steer_joint_friction}"/>
    </joint>
      
     
  <transmission name="${prefix}wheel_steer_trans">
     <type>transmission_interface/SimpleTransmission</type>
     <joint name="${prefix}wheel_steer_joint">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
     </joint>
     <actuator name="${prefix}wheel_steer_motor">
        <hardwareInterface>PositionActuatorInterface</hardwareInterface>
        <mechanicalReduction>${steer_mechanical_reduction}</mechanicalReduction>
     </actuator>
  </transmission>
  <link name="${prefix}wheel_steer_link">
      <visual>
        <!-- HIGH RESOLUTION WHEELS -->
        <xacro:if value="${hq}">
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>     
                <mesh filename="package://vulcano_base_description/meshes/wheels/hub.stl" />
          </geometry>         
        </xacro:if>
       <!-- LOW RESOLUTION WHEELS -->
        <xacro:unless value="${hq}">
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>     
                <mesh filename="package://vulcano_base_description/meshes/wheels/hub.stl" />
          </geometry>         
        </xacro:unless>
      </visual>
      
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
             <mesh filename="package://vulcano_base_description/meshes/wheels/hub.stl" />
        </geometry>
      </collision>    
      <inertial>
        <mass value="${wheel_mass}" />
        <origin xyz="0 0 0" />
        <cylinder_inertia  m="${wheel_mass}" r="${wheel_height}" h="${wheel_radius}" /> <!-- TODO: check inertia -->
      </inertial>    
    </link>


   <!--WHEEL TIRE -->
   <joint name="${prefix}wheel_traction_joint" type="continuous">
        <parent link="${prefix}wheel_steer_link"/>
        <child link="${prefix}wheel_traction_link"/>
        <origin xyz="0 0.0035 0" rpy="0 0 ${M_PI}" /> 
        <axis xyz="0 1 0" rpy="0 0 0" />
        <limit effort="${traction_joint_effort_limit}" velocity="${traction_joint_velocity_limit}"/>      
        <dynamics damping="${traction_joint_damping}" friction="${traction_joint_friction}"/>
    </joint>

    <transmission name="${prefix}wheel_traction">
     <type>transmission_interface/SimpleTransmission</type>
     <joint name="${prefix}wheel_traction_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
     </joint>
     <actuator name="${prefix}wheel_traction_motor">
       <hardwareInterface>VelocityActuatorInterface</hardwareInterface>
       <mechanicalReduction>${traction_mechanical_reduction}</mechanicalReduction>
     </actuator>
    </transmission>
  
  <link name="${prefix}wheel_traction_link">
      <visual>
        <!-- HIGH RESOLUTION WHEELS -->
        <xacro:if value="${hq}">
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>     
              <mesh filename="package://vulcano_base_description/meshes/wheels/rubber_band.stl" />
          </geometry>         
        </xacro:if>
       <!-- LOW RESOLUTION WHEELS -->
        <xacro:unless value="${hq}">
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>     
              <mesh filename="package://vulcano_base_description/meshes/wheels/rubber_band.stl" />
          </geometry> 
        </xacro:unless>
      </visual>      
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://vulcano_base_description/meshes/wheels/rubber_band.stl" />
        </geometry>
      </collision>    
      <inertial>
        <mass value="${wheel_mass}" />
        <origin xyz="0 0 0" />
        <cylinder_inertia  m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
      </inertial>
   </link>
