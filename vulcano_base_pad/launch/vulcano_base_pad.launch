<?xml version="1.0"?>
<launch>

  <arg name="logitech" default="false"/>

  <node name="base_pad" pkg="vulcano_base_pad" type="vulcano_base_pad" output="screen">
    <param name="cmd_topic_vel" value="cmd_vel" type="string"/>
    <rosparam command="load" file="$(find vulcano_base_pad)/config/base_ps3.yaml" unless="$(arg logitech)" />
    <rosparam command="load" file="$(find vulcano_base_pad)/config/base_logitech.yaml" if="$(arg logitech)" />
  </node>

</launch>

