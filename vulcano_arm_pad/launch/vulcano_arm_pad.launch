<?xml version="1.0"?>
<launch>

  <arg name="prefix" />
  <!-- joy node -->
  <node name="$(arg prefix)_joy" pkg="joy" type="joy_node" respawn="true">
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.12" />
    <param name="autorepeat_rate" value="10.0" type="double" />
  </node>

  <node name="$(arg prefix)_pad" pkg="vulcano_arm_pad" type="vulcano_arm_pad" output="screen">       
    <rosparam command="load" file="$(find vulcano_arm_pad)/config/$(arg prefix)ps3.yaml" />
  </node>
   
</launch>


